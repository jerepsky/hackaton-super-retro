        <ImplicitUsings>enable</ImplicitUsings>
        <RootNamespace>hackaton_super_retro</RootNamespace>
        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
    </PropertyGroup>

    <ItemGroup>
